{
	"$schema": "https://raw.githubusercontent.com/apexskier/nova-json-language-server/main/json.novaextension/nova-extension-schema.json",

	"identifier": "belcar.Colonoscopia",
	"organization": "belcar-s",
	"version": "1.0",
	"categories": ["commands"],

	"name": "Colonoscopia",
	"description": "Quickly add semicolons.",
	"repository": "https://github.com/belcar-s/nova-colonoscopia",
	"bugs": "https://github.com/belcar-s/nova-colonoscopia/issues",

	"main": "main.js",

	"activationEvents": ["*"],

	"entitlements": {},

	"commands": {
		"editor": [
			{
				"title": "Add Semicolon To Line's End",
				"command": "colonoscopia.addSemi",
				"shortcut": "ctrl-return"
			},
			{
				"title": "Add Semicolon To Line's End And Keep Cursor Position",
				"command": "colonoscopia.addSemiKeepPos",
				"shortcut": "opt-cmd-return"
			},
			{
				"title": "Add Semicolon And Continue At New Line",
				"command": "colonoscopia.addSemiNewLine",
				"shortcut": "opt-return"
			}
		]
	},

	"config": []
}
